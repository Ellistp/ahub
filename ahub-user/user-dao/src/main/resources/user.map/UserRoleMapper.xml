<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ahub.user.mapper.UserRoleMapper" >

    <resultMap id="BaseUserResultMap" type="com.ahub.user.model.UserRoleDO" >
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="gmt_create" property="gmtCreate" jdbcType="TIMESTAMP"/>
        <result column="gmt_modified" property="gmtModified" jdbcType="TIMESTAMP"/>
        <result column="user_id" property="userId" jdbcType="BIGINT"/>
        <result column="role_id" property="roleId" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="cols" >
        id,
        gmt_create,
        gmt_modified,
        user_id,
        role_id
    </sql>

    <update id="update" parameterType="com.ctp.ghub.model.UserRoleDO" >
        UPDATE acc_user_role
        SET gmt_modified = now()
        WHERE id = #{id}
    </update>

    <select id="listRoleIds" resultType="java.lang.Long" parameterType="java.lang.Long">
        select
        role_id
        from acc_user_role
        where user_id = #{userId}
    </select>
</mapper>